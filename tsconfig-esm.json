{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./lib/esm",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,

    "typeRoots": [
      "src/index.d.ts",
      "node_modules/@types"
    ],
    "rootDir": "./src/"

  },

  "files": [
    "./src/index.ts"
  ],
  "include": [
    "./src/atom",
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
