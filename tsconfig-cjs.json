{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./lib",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,

    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "atom/*": ["atom/*"],
      "table/*": ["table/*"]
    },
  },
  "files": [
    "index.ts"
  ],

  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
